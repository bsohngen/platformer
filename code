<!DOCTYPE html>
<html>
<head>
    <title>Simple Platformer Game</title>
</head>
<body>
    <canvas id="canvas" width="640" height="480"></canvas>
    <script>
        // Initialize the canvas and context
        var canvas = document.getElementById("canvas");
        var ctx = canvas.getContext("2d");

        // Define the game objects
        var player = {
            x: 50,
            y: 400,
            width: 50,
            height: 50,
            speed: 5,
            jumping: false,
            velY: 0,
            grounded: false
        };

        var platform = {
            x: 0,
            y: 450,
            width: 640,
            height: 30
        };

        // Define the game loop
        function gameLoop() {
            // Clear the canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Draw the player
            ctx.fillStyle = "#FF0000";
            ctx.fillRect(player.x, player.y, player.width, player.height);

            // Draw the platform
            ctx.fillStyle = "#0000FF";
            ctx.fillRect(platform.x, platform.y, platform.width, platform.height);

            // Move the player
            if (player.jumping && player.grounded) {
                player.velY = -player.speed * 2;
                player.grounded = false;
            }

            player.velY += 1; // Apply gravity
            player.y += player.velY;

            // Check for collision with the platform
            if (player.y + player.height > platform.y && player.y < platform.y + platform.height && player.x + player.width > platform.x && player.x < platform.x + platform.width) {
                player.velY = 0;
                player.grounded = true;
            }

            // Limit the player's movement to the canvas bounds
            if (player.x < 0) {
                player.x = 0;
            }

            if (player.x + player.width > canvas.width) {
                player.x = canvas.width - player.width;
            }

            if (player.y < 0) {
                player.y = 0;
            }

            if (player.y + player.height > canvas.height) {
                player.y = canvas.height - player.height;
                player.velY = 0;
                player.grounded = true;
            }

            // Request the next frame
            requestAnimationFrame(gameLoop);
        }

        // Handle user input
        document.addEventListener("keydown", function(event) {
            switch (event.keyCode) {
                case 37: // Left arrow key
                    player.x -= player.speed;
                    break;

                case 39: // Right arrow key
                    player.x += player.speed;
                    break;

                case 32: // Spacebar
                    player.jumping = true;
                    break;
            }
        });

        // Start the game loop
        gameLoop();
    </script>
</body>
</html>
